<!--components/modal.wxml-->
<view class='mask' wx:if='{{show}}' bindtap='clickMask'></view>
<view class='modal' wx:if='{{show}}'>
    <view class='title'>题目贡献者</view>
    <view style='position: relative; margin: 0 auto; width: 100%'>
    <view class='weather-list'>
      <view class='icon-view' data-id='{{item.id}}' bindtap='onIconTap' wx:for="{{weatherList}}" wx:key="id" wx:for-item="item">
        <view class='icon'>
        <image class='icon-image' src="{{item.image}}"></image>
        <image wx:if="{{item.selected}}" class='icon-selected' src='../../images/selected.png'></image>
        </view>
        <text>{{item.text}}</text>
      </view>
    </view>
    </view>
    <view class='modal-btn-wrapper'>
      <view class='cancel-btn' bindtap='cancel'>取消</view>
      <view class='confirm-btn {{confirmState}}' bindtap='confirm'>确定</view>
    </view>
  </view>
