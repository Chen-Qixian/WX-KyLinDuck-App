<view class='mask' wx:if='{{show}}' bindtap='clickMask'></view>
<view class='modal' wx:if='{{show}}'>
  <image src="../../images/component_bg.jpg" class="bg"></image>
  <view class="title">
    房间登入
  </view>
  <view class="question-content">
    <text class="hint">房间</text><input bindinput="roomId" placeholder="请输入房间号"></input>
    <text class="hint">密码</text><input password="true" bindinput="roomPwd" placeholder="请输入房间密钥"></input>
  </view>
  <view class="modal-btn-wrapper">
    <view class="cancel-btn" bindtap="cancel">取消</view>
    <view class="confirm-btn" bindtap="confirm">确定</view>
  </view>
</view>