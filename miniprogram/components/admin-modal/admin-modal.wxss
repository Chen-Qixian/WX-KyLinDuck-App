.mask {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,0.4);
  z-index: 99999;
}

.modal {
  position: absolute;
  top: 20%;
  left: 0;
  right: 0;
  margin: 0 auto;
  width: 620rpx;
  height: 710rpx;
  background-color: #fff;
  border-radius: 16rpx;
  z-index: 199999; 
}

.bg {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  height: 100%;
  width: 100%;
  border-radius: 16rpx;
  opacity: 0.3;  
}

.title {
  font-size: 36rpx;
  text-align: center;
  margin: 66rpx 38rpx 0 38rpx;
  padding-bottom: 27rpx;
  color: #333;
  border-bottom: 2rpx solid #eee;
}

.modal-btn-wrapper {
  display: flex;
  flex-direction: row;
  margin: 18rpx 38rpx;
  height: 100rpx;
  line-height: 100rpx;
  border-top: 2rpx solid #E6E6E6;
  background-color: #fff;
}

.cancel-btn, .confirm-btn {
  flex: 1;
  color: #999;
  height: 100rpx;
  width: 200rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 32rpx;
  z-index: 200000;
}

.confirm-btn {
  color: #00B977;
}

.cancel-btn {
  border-right: 2rpx solid rgba(7,17,27,0.1);
}

.question-content {
  position: relative;
  margin: 0 auto;
  width: 100%;
  box-sizing: border-box;
  height: 414rpx;
  padding: 36rpx 56rpx;
  font-size: 28rpx;
  color: #666;
  line-height: 50rpx
}

input {
  border: 2rpx solid #ccc;
  border-radius: 8rpx;
  padding: 16rpx 20rpx;
  margin: 20rpx;
}

.hint {
  margin-left: 28rpx;
}