<view class="wrapper">
  <image src="../../images/background.png" class="background"></image>
  <image src="../../images/title.png" class="title"></image>
  <view class="btn addQuestion" bindtap="addQuestion">贡献题目</view>
  <view class="btn ansQuestion" bindtap="ansQuestion">接受挑战!</view>
  <view class="administrator" bindtap="admin">管理员登陆</view>
  <question-modal show="{{showQuestionModal}}" question="{{curQuestion}}" mentor="{{curMentor}}" student="{{curStudent}}" bindwronganswer="wrongAnswer"></question-modal>
  <admin-modal show="{{showLoginModal}}"></admin-modal>
</view>