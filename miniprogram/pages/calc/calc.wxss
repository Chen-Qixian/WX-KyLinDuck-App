page {
  height: 100%;
  width: 100%;
}
.wrapper {
  margin: 0;
  padding: 0;
  height: 100%;
  width: 100%;
}
.content {
  height: 400rpx;
  display: flex;
  flex-direction:column;
  align-items: center;
  background-color: #ccc;
  font-family: "Microsoft YaHei";
}

.layout-top {
  width: 100%;
  margin-bottom: 30rpx;
}

.layout-bottom {
  width: 100%;
}

.screen {
  text-align: right;
  width: 100%;
  line-height: 400rpx;
  height: 400rpx;
  padding: 0 10rpx;
  font-weight: bold;
  font-size: 100rpx;
  box-sizing: border-box;
  border-top: 2rpx solid #fff;
  overflow-y: hidden;
}

.btnGroup {
  display: flex;
  flex-direction: row;
  flex: 1;
  width: 100%;
  height: 5rem;
  background-color: #fff;
}

.item {
  width: 25%;
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: center;
  margin-top: 2rpx;
  margin-right: 2rpx;
}

.item:active {
  background-color: #f00;
}

.zero {
  width: 50%;
}

.orange {
  color: #fef4e9;
  background: #f78d1d;
  font-weight: bold;
}

.blue {
  color:#d9eef7;
  background-color: #0095cd;
}

.iconBtn {
  display: flex;
}

.icon {
  display: flex;
  align-items: center;
  width: 100%;
  justify-content: center;
}