.profile{
  background: #5ebb8d;
  height: 400rpx;
  text-align: center;
  position: relative;
  width: 100%;
}

.profile-img{
  width: 200rpx;
  height: 200rpx;
  display: block;
  overflow: hidden;
  border-radius: 50%;
  position: absolute;
  left: 50%;
  transform: translate(-50%, 60rpx);
}

.profile-name{
  font-size: 36rpx;
  color: #fff;
  position: absolute;
  left: 50%;
  transform: translate(-50%, 270rpx);
}

.userInfo {
  width: 100%;
  background-color: #ccc;
  color: white;
}

.userInfo>button {
  height: 100%;
  width: 100%;
  color: white;
}

.developer {
  width: 100%;
  bottom: 5px;
  font-size: 20rpx;
  color: #aaa;
  position: fixed;
  padding: 0 auto;
  text-align: center;
}

.infoDetail {
  border-bottom: 1px solid #ccc;
  padding: 20rpx;
  font-size: 28rpx;
  font-weight: normal;
  color: #424242;
  height: 36rpx;
  line-height: 36rpx;
}

.logo {
  border-radius: 50%;
  height: 150rpx;
  width: 150rpx;
  margin: 40rpx auto;
}

.click {
  position: fixed;
  bottom: 2%;
  right: 35%;
  height: 60rpx;
  width: 60rpx;
}

.info-btn {
  position: fixed;
  height: 100%;
  width: 750rpx !important;
  background-color: transparent; 
}