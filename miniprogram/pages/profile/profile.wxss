page {
  height: 100%;
  width: 100%;
}

.profile{
  background: #5ebb8d;
  height: 400rpx;
  text-align: center;
  position: relative;
  width: 100%;
}

.wrapper {
  height: 710rpx;
  width: 100%;
  position: relative;
}

.profile-img{
  width: 200rpx;
  height: 200rpx;
  display: block;
  overflow: hidden;
  border-radius: 50%;
  position: absolute;
  left: 50%;
  transform: translate(-50%, 60rpx);
}

.profile-name{
  font-size: 36rpx;
  color: #fff;
  position: absolute;
  left: 50%;
  transform: translate(-50%, 270rpx);
}

.userInfo {
  width: 100%;
  background-color: #ccc;
  color: white;
}

.userInfo>button {
  height: 100%;
  width: 100%;
  color: white;
}

.developer {
  width: 100%;
  bottom: 5px;
  font-size: 20rpx;
  color: #aaa;
  position: fixed;
  padding: 0 auto;
  text-align: center;
}

.infoDetail {
  border-bottom: 1px solid #ccc;
  padding: 20rpx;
  font-size: 28rpx;
  font-weight: normal;
  color: #424242;
  height: 36rpx;
  line-height: 36rpx;
}

.logo {
  height: 150rpx;
  width: 150rpx;
  position: absolute;
  left: 50%;
  top: 560rpx;
  transform: scale(1) translate(-50%,-50%);
  transition: transform 1.5s, top 1.5s;
}

.origin {
  margin: auto;
  top: 50%;
  transform: translate(-50%,-50%) scale(2);
}
/* 设置动画的class要一直保留，淡出动画用opacity */
.click {
  position: absolute;
  bottom: 50rpx;
  right: 250rpx;
  height: 60rpx;
  width: 60rpx;
  transform: rotate(-20deg);
  opacity: 0;
  transition: opacity 1.5s, bottom 1.5s, right 1.5s;
}

.clicked {
  bottom: 200rpx;
  right: 200rpx;
  opacity: 1;
}

.info-btn {
  position: fixed;
  height: 100%;
  width: 750rpx !important;
  background-color: transparent; 
}